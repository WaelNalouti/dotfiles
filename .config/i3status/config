# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
	color_good = "#98be65"
	color_bad = "#ff6c6b"
	color_degraded = "#ECBE7B"
}

order += "volume master"
order += "battery 0"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "disk /home"
order += "wireless wlp2s0"
order += "ethernet enp3s0"
order += "tztime local"

wireless wlp2s0 {
        format_up = "  %essid (%ip/%quality/%bitrate)"
        format_down = "  ✗"
}

ethernet enp3s0 {
        format_up = "Eth: (%speed)"
        format_down = "Eth: ✗"
}

battery 0 {
        last_full_capacity = true
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = " CHR"
        status_bat = "  BAT"
        status_unk = ""
        status_full = "☻ FULL"
        # path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%d %b %Y %H:%M:%S"
}

cpu_usage {
        format = "CPU: %usage"
}

memory {
        format = "MEM %used"
        threshold_degraded = "10%"
        format_degraded = "Mem_FREE: %free"
}

disk "/" {
        format = "/ %avail"
}

disk "/home" {
        format = "~ %avail"
}

volume master {
        format = "   %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
